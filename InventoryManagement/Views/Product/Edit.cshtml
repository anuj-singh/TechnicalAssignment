@model InventoryManagement.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<div class="row text-center">
    <h2 class="card-header m-3"> Edit Product</h2>
</div>
<div class="row">
    <div class="col-6 offset-3 border border-2 rounded-2 p-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" inputmode="numeric" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatedDate" class="control-label"></label>
                <input type="date" asp-for="CreatedDate" class="form-control" readonly="readonly" />
                <span asp-validation-for="CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdatedDate" class="control-label"></label>
                <input type="date" asp-for="UpdatedDate" class="form-control" readonly="readonly" value="@DateOnly.FromDateTime(DateTime.Now)" />
                <span asp-validation-for="UpdatedDate" class="text-danger"></span>
            </div>
            <div class="form-group text-center m-2">
                <input type="submit" asp-action="Edit" asp-controller="Product" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>

