@{
    ViewData["Title"] = "Upload Excel";
}

<div class="container">
    <div class="row card border-2 rounded-2 text-center mb-2">
        <h2> Upload your excel file</h2>
    </div>
    <div class="row">
        <div class="col-6 offset-3 card border-2 rounded-2">
            <form method="post" asp-action="ImportExcelData" asp-controller="Product" enctype="multipart/form-data">
                <div class="form-group m-2">
                    <label class="float-start mb-2">Select your file for uploading:</label>
                    <input class="form-control mt-2" type="file" name="formfile" accept="application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet" />
                    
                </div>
                <input class="btn btn-primary m-2" type="submit" value="Upload Data" />
                <a class="btn btn-success" asp-action="Index" asp-controller="Product"> Back</a>
            </form>
        </div>
    </div>
</div>

